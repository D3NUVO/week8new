        <div class="container-fluid">
            <!-- ============================================================== -->
            <!-- Start Page Content -->
            <!-- ============================================================== -->
            <div class="col-lg-8 col-xlg-9 col-md-7">
                <div class="card">
                    <div class="card-body">
                        <form class="form-horizontal form-material mx-2" action="/admin/add-product" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label class="col-md-12">Product Name</label>
                                <div class="col-md-12">
                                    <input type="text" name="productname" placeholder="Product Name"
                                        class="form-control form-control-line">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="example-email" class="col-md-12">Price</label>
                                <div class="col-md-12">
                                    <input type="number" name="productPrice" placeholder="Enter Price"
                                        class="form-control form-control-line"
                                        id="example-price">
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <label class="col-md-12">Rating (MAX-5)</label>
                                <div class="col-md-12">
                                    <input  type="number" name="productRate" placeholder="Rate here"
                                        class="form-control form-control-line" max="5">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-12">Information</label>
                                <div class="col-md-12">
                                    <!-- <textarea rows="5" class="form-control form-control-line"></textarea> -->
                                    <input type="text" name="productInfo" class="form-control form-control-line">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-12">Discription</label>
                                <div class="col-md-12">
                                    <!-- <textarea rows="5" class="form-control form-control-line"></textarea> -->
                                    <input type="text" name="productDiscription" class="form-control form-control-line">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-12">Select Catagory</label>
                                <div class="col-sm-12">
                                    <select name="productCatagory" class="form-select shadow-none form-control-line">
                                        <% for(let i=1;i <=category.length; i++){ %>
                                        <option><%= category[i-1].category%></option>
                                        <% } %>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label  class="col-md-12">Quantity</label>
                                <div class="col-md-12">
                                    <input type="number" name="productQuantity" placeholder="Enter Quantity"
                                        class="form-control form-control-line">
                                        
                                </div>
                            </div>
                            <div class="input-group mb-3">
                                <input type="file" name="productImage" class="form-control" >
                            </div>
                            <div class="form-group">
                                <div class="col-sm-12">
                                    <button class="btn btn-success text-white">Add Product</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- End PAge Content -->
